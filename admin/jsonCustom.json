{
    "i18n": true,
    "items": {
        "_basicSettings": {
            "newLine": true,
            "type": "header",
            "text": "Basic configuration",
            "sm": 12
        },
        "alias": {
            "type": "text",
            "label": "Alias name",
            "help": "If no alias is set, original name will be used",
            "sm": 5
        },
        "_offsets": {
            "newLine": true,
            "type": "header",
            "text": "Offset",
            "sm": 12
        },
        "offsetToday": {
            "type": "checkbox",
            "sm": 12,
            "md": 6,
            "lg": 3,
            "label": "Offset today"
        },
        "offsetDay": {
            "type": "number",
            "min": 1,
            "max": 31,
            "sm": 12,
            "md": 6,
            "lg": 3,
            "label": "Offset day"
        },
        "offsetMonth": {
            "type": "number",
            "min": 1,
            "max": 12,
            "sm": 12,
            "md": 6,
            "lg": 3,
            "label": "Offset month"
        },
        "offsetYear": {
            "type": "number",
            "min": 2022,
            "sm": 12,
            "md": 6,
            "lg": 3,
            "label": "Offset year"
        },
        "selectedPrice": {
            "command": "getPriceDefinitions",
            "type": "autocompleteSendTo",
            "label": "Select price definition",
            "sm": 4
        },
        "selectedUnit": {
            "command": "getUnits",
            "type": "autocompleteSendTo",
            "label": "Select Unit",
            "default": "Detect automatically",
            "sm": 3
        },
        "_calcSettings": {
            "newLine": true,
            "type": "header",
            "text": "Calculation settings",
            "sm": 12
        },
        "costs": {
            "type": "checkbox",
            "label": "Calculate costs",
            "sm": 6
        },
        "basicRate": {
            "type": "checkbox",
            "label": "Including basic rate",
            "sm": 6
        },
        "consumption": {
            "type": "checkbox",
            "label": "Calculate consumption",
            "sm": 6
        },
        "meter_values": {
            "type": "checkbox",
            "label": "Store Meter Values",
            "sm": 6
        },
        "deviceResetLogicEnabled": {
            "type": "checkbox",
            "label": "Enable device value reset detection",
            "default": true,
            "sm": 6
        },
        "threshold": {
            "type": "number",
            "label": "threshold",
            "help": "Threshold value of device reset detection",
            "default": 1,
            "min": 0,
            "sm": 6
        },
        "_startValues": {
            "newLine": true,
            "type": "header",
            "text": "Start values for the respective period, unit scale (e.g. Wh or kWh) must match the target unit!",
            "sm": 12
        },
        "start_day": {
            "type": "number",
            "label": "Day",
            "help": "Meter reading at the beginning of the day",
            "default": 0,
            "min": 0,
            "sm": 6
        },
        "start_week": {
            "type": "number",
            "label": "Week",
            "help": "Meter reading at the beginning of the week",
            "default": 0,
            "min": 0,
            "sm": 6
        },
        "start_month": {
            "type": "number",
            "label": "Month",
            "help": "Meter reading at the beginning of the month",
            "default": 0,
            "min": 0,
            "sm": 6
        },
        "start_quarter": {
            "type": "number",
            "label": "Quarter",
            "help": "Meter reading at the beginning of the quarter",
            "default": 0,
            "min": 0,
            "sm": 6
        },
        "start_year": {
            "type": "number",
            "label": "Year",
            "help": "Meter reading at the beginning of the year",
            "default": 0,
            "min": 0,
            "sm": 6
        }
    }
}